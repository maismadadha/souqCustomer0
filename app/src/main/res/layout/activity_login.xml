<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/cairo_extra_bold"
            android:text="مرحباً بك"
            android:textColor="@color/old_mauve"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg_sginup"
            android:drawableStart="@drawable/jordan_flag"
            android:drawablePadding="20dp"
            android:fontFamily="@font/cairo_regular"
            android:hint=" 70 000 0000"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_hint_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_button"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@drawable/gray_bt_bg"
            android:elevation="0dp"
            android:fontFamily="@font/cairo_extra_bold"
            android:stateListAnimator="@null"
            android:text="تأكيد"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/create_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  أنشئ حساب جديد"
                android:gravity="center"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/mauve"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/new_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عميل جديد؟"
                android:gravity="center"
                android:fontFamily="@font/cairo_semi_bold"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>